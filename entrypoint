#!/bin/bash

cd /var/www/html
echo "Start compose install"
composer install
#echo "Fixing permissions"
#exec ./fix-permissions.sh --drupal_path=$WEB_DOCUMENT_ROOT --drupal_user=application
echo "Start cd web"
cd web
echo "Start drush cr"
drush cr
echo "Start drush cim -y"
drush cim -y
echo "Start drush updb -y"
drush updb -y
echo "Start drush cr"
drush cr
echo "End entrypoint"
